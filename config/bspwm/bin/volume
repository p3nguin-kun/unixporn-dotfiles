#!/usr/bin/env bash

get_volume(){
    amixer -D pipewire get Master | awk -F 'Left:|[][]' 'BEGIN {RS=""}{ print $3 }'
}

volume_up(){
    amixer -D pipewire -q set Master 5%+ unmute
}

volume_down(){
    amixer -D pipewire -q set Master 5%- unmute
}

toggle_mute(){
    amixer -D pipewire sset Master toggle-mute
}

notify_cmd(){ 
    dunstify --replace=11111 --hints=int:value:"$(get_volume)" "ðŸ”Š Volume: $(get_volume)"
}

case "$1" in
	--up) volume_up
        notify_cmd ;;
	--down) volume_down
            notify_cmd ;;
	--toggle) toggle_mute
            notify_cmd ;;
esac
